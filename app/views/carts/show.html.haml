
.mb-3
%table.table.table-hover
  %thead.thead-default
    %tr
      %th= Product.human_attribute_name(:name)
      %th= Product.human_attribute_name(:price)
      %th= Cart.human_attribute_name(:quantity)
      %th
  %tbody
    - @cart.cart_items.each do |item|
      %tr
        %td= link_to item.item.name, item_path(item.item_id)
        %td= item.item.price
        %td= item.quantity
        %td= link_to '削除', delete_item_path(item_id: item.item_id), method: :delete, data: { confirm: "カートから商品を削除します。よろしいですか？" }, class: 'btn btn-danger'

= simple_form_for @purchase do |f|
  %table.table.table-hover
    %tbody
      %tr
        %td 小計
        %td= cart_items_subtotal
        %td
        %td
        = f.hidden_field :subtotal, value: cart_items_subtotal
      %tr
        %td 税金
        %td 0
        %td
        %td
        = f.hidden_field :subtotal, value: 0
      %tr
        %td 送料
        %td 0
        %td
        %td
      %tr
        %td 代引き手数料
        %td 0
        %td
        %td
        = f.hidden_field :subtotal, value: 0
      %tr
        %td 合計
        %td= cart_items_subtotal
        %td
        %td
        = f.hidden_field :subtotal, value: cart_items_subtotal
      %tr
        %td
        %td= f.submit "商品を購入する", class: "btn btn-primary btn-lg btn-block"
        %td
        %td
        
